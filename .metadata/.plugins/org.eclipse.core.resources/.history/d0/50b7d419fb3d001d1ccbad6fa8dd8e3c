#ifndef DATOSTURNO_H_
#define DATOSTURNO_H_

enum SiguienteTurno {
	seguir,
	noSeguir
};

struct Informacion {
	float turno;
	float nacidasTotal;
	float muertasTotal;
	int vivasTotal;
	int nacidas;
	int muertas;
	SiguienteTurno sigTurno;

}datos;

void mostrarDatos(struct Informacion * datos);
void comprobar(struct Celula * matriz[20][80], struct Informacion * datos);
SiguienteTurno preguntar();

float promedioNacidas;
float promedioMuertas;

struct CelulaAuxiliar {
	Estado estado;
}AUX[20][80];

bool deseo;

SiguienteTurno sigTurno;

#endif /* DATOSTURNO_H_ */
