#include "principal.h"
#include "inicializar.h"

void inicializar(struct Celula * matriz[20][80], struct Tablero tablero){


	//calculo el largo de la matriz
	filas = sizeof(*matriz)/sizeof(**matriz);
	columnas = sizeof(*matriz[0])/sizeof(**matriz[0]);

	for (int i = 0; i < filas; i++){
		for (int j = 0; j < tablero.columnas; j++){
			matriz[i][j]->estado = muerta;
			if (i == 0){
				if (j == 0){
					matriz[i][j]->tipo = esqSupIzq;
				}else if (j == (tablero.columnas - 1)){
					matriz[i][j]->tipo = esqSupDer;
				}else{
					matriz[i][j]->tipo = bordeInf;
				}
			}else if (j == 0){
				if (i == (tablero.filas -1)){
					matriz[i][j]->tipo = esqInfIzq;
				}else{
					matriz[i][j]->tipo = bordeIzq;
				}
			}else if (i == (tablero.filas - 1)){
				if (j == (tablero.columnas - 1)){
					matriz[i][j]->tipo = esqInfDer;
				}else{
					matriz[i][j]->tipo = bordeInf;
				}
			}else if (j == (tablero.columnas - 1)){
				matriz[i][j]->tipo = bordeDer;

			}else{
				matriz[i][j]->tipo = interior;
			}
		}
	}
}


