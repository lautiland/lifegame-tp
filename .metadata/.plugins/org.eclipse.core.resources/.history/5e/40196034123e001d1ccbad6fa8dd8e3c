#include "tableroMatriz.h"
#include <iostream>

using namespace std;


void imprimirMatriz(struct Celula** matriz, struct Tablero tablero){

	//recorro la matriz imprimiendo las c√©lulas
	for (int i = 0; i < tablero.filas; i++){
		cout<<"     ";
		for (int j = 0; j < tablero.columnas; j++){
			if (matriz[i][j]->estado == viva){
				cout<<"0 ";
			}else if (matriz[i][j]->estado == viva){
				cout<<"X ";
			}
		}
		cout<<endl;
	}
}
