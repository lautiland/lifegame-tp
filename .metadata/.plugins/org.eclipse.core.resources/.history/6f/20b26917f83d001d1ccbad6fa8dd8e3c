#include "principal.h"
#include "imprimirMatriz.h"
#include <iostream>

using namespace std;


void imprimirMatriz(struct Celula * matriz[20][80]){

	//calculo el largo de la matriz
	filas = sizeof(*matriz)/sizeof(**matriz);
	columnas = sizeof(*matriz[0])/sizeof(**matriz[0]);

	//recorro la matriz imprimiendo las c√©lulas
	for (int i = 0; i < filas; i++){
		cout<<"     ";
		for (int j = 0; j < columnas; j++){
			if (matriz[i][j]->estado == viva){
				cout<<"0 ";
			}else if (matriz[i][j]->estado == viva){
				cout<<"X ";
			}
		}
		cout<<endl;
	}
}
