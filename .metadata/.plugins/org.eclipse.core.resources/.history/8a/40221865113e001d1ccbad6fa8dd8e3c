#include "tableroMatriz.h"

void inicializar(struct Celula** matriz, struct Tablero tablero){

	for (int i = 0; i < tablero.filas; i++){
		for (int j = 0; j < tablero.columnas; j++){
			if (i == 0){
				if (j == 0){
					matriz[i][j]->tipo = esqSupIzq;
				}else if (j == (tablero.columnas - 1)){
					*(matriz+i*(tablero.columnas)+j)->tipo = esqSupDer;
				}else{
					*(matriz+i*(tablero.columnas)+j)->tipo = bordeInf;
				}
			}else if (j == 0){
				if (i == (tablero.filas -1)){
					*(matriz+i*(tablero.columnas)+j)->tipo = esqInfIzq;
				}else{
					*(matriz+i*(tablero.columnas)+j)->tipo = bordeIzq;
				}
			}else if (i == (tablero.filas - 1)){
				if (j == (tablero.columnas - 1)){
					*(matriz+i*(tablero.columnas)+j)->tipo = esqInfDer;
				}else{
					*(matriz+i*(tablero.columnas)+j)->tipo = bordeInf;
				}
			}else if (j == (tablero.columnas - 1)){
				*(matriz+i*(tablero.columnas)+j)->tipo = bordeDer;

			}else{
				*(matriz+i*(tablero.columnas)+j)->tipo = interior;
			}
			*(matriz+i*(tablero.columnas)+j)->estado = muerta;
		}
	}
}


