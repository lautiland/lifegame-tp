#ifndef TABLEROMATRIZ_H_
#define TABLEROMATRIZ_H_

struct Tablero {
	int filas;
	int columnas;
}tablero = {20, 80};

enum Estado {
	muerta,
	viva
};

enum Tipo {
	interior,
	bordeSup,
	bordeInf,
	bordeDer,
	bordeIzq,
	esqSupIzq,
	esqSupDer,
	esqInfIzq,
	esqInfDer
};

struct Celula {
	Estado estado;
	Tipo tipo;
}matriz[20][80];

void inicializar(struct Celula * matriz[20][80], struct Tablero tablero);
void ingresarCelulas(struct Celula * matriz[20][80], struct Tablero tablero);
void imprimirMatriz(struct Celula * matriz[20][80], struct Tablero tablero);

#endif /* TABLEROMATRIZ_H_ */
